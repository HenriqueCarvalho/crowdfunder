<%= form_for @project do |f| %>
  <div class='error'>
  <% if @project.errors.any? %>
    <% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: name %>
    <% end -%>
  <% end %>
  </div>

  <div class='field'>
    <%= f.label :name %>
    <%= f.text_field :name, :required => true %>
  </div>

  <div class='field'>
    <%= f.label :description %>
    <%= f.text_field :description, :required => true %>
  </div>

  <div class='field'>
    <%= f.submit 'Save' %>
  </div>
<% end %>